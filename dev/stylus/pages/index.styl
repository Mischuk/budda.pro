.main-page
  position relative
  .container:after
    height 0
  .go-to-top
    display none
  .copyright
    color #fff
    position relative
    z-index 35
  .container
    position relative
    &:before
      content ''
      position absolute
      left 0
      width 100%
      bottom 0px
      background-color #555961
      height 250px
.main
  position relative
  height 841px
  background url(../images/index-bg.jpg) 0 0 no-repeat
  z-index 20
  .slick
    position: absolute;
    left: 0;
    bottom: 120px;
    width: 100%;
    .slick-arrow
      position absolute
      top 50px
      width: 50px;
      height: 50px;
      text-indent -9999px
      border none
      z-index 200
    .slick-next
      right -38px
      background: url('../images/sprite.png') no-repeat -2px -96px;
      &:active
        box-shadow inset 0 0 5px 3px rgba(0,0,0,.3)
        border-top-right-radius 50px
        border-bottom-right-radius 50px
        border-top-left-radius 10px
        border-bottom-left-radius 10px
    .slick-prev
      left -38px
      background: url('../images/sprite.png') no-repeat -62px -96px;
      &:active
        box-shadow inset 0 0 5px 3px rgba(0,0,0,.3)
        border-top-left-radius 50px
        border-bottom-left-radius 50px
        border-top-right-radius 10px
        border-bottom-right-radius 10px
    .item
      text-align center
      outline none
      position relative
      .icon
        position relative
        display block
        width 148px
        height 148px
        margin 0 auto
      .hover
        opacity 0
        position absolute
        left 0
        top 0
        width 100%
        height 100%
      img
        anim(opacity, 1s)
      &:hover
        img
          opacity 0
        .hover
          opacity 1
      img
        display inline-block

      a
        color #fff
        font-size 18px
        line-height 1
    .slick-track
      margin 0 auto